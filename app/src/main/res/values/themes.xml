        <item name="android:textColorSecondary">@drawable/default_text_color</item>
        <item name="android:textColorTertiary">@drawable/default_text_color</item>
        <item name="android:textColorPrimaryInverse">@drawable/default_text_color</item>
        <item name="android:textColorSecondaryInverse">@drawable/default_text_color</item>
        <item name="android:textColorTertiaryInverse">@drawable/default_text_color</item>
        <item name="android:textColor">@drawable/default_text_color</item>
        <item name="android:listViewStyle">@style/Widget.ListView</item>
        <!--
        <item name="android:divider">@android:color/darker_gray</item>
	    <item name="android:dividerHeight">1dp</item>
        -->
        <item name="android:windowBackground">@color/myWindowBackgroundLight</item>
    </style>

    <style name="Widget" parent="android:Widget"></style>

