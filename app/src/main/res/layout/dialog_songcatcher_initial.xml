<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/long_click_custom_dialog"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:paddingLeft="@dimen/trivia_bubble_padding_left_right"
    android:paddingRight="@dimen/trivia_bubble_padding_left_right" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_rounded_corner_white"
        android:orientation="vertical"
        android:paddingLeft="@dimen/trivia_bubble_content_padding"
        android:paddingRight="@dimen/trivia_bubble_content_padding"
        android:paddingTop="@dimen/dlg_margin_top" >

        <RelativeLayout
            android:id="@+id/custom_dialog_title_row"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/media_details_long_click_custom_dialog_text_view_title_row_padding_left"
            android:paddingRight="@dimen/media_details_long_click_custom_dialog_text_view_title_row_padding_left" >

            <com.hungama.myplay.activity.ui.widgets.LanguageTextView
                android:id="@+id/video_upgrade_custom_dialog_title_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:text="@string/songcatcher_help_title"
                android:textColor="@color/black"
                android:textSize="@dimen/xlarge_text_size" />
        </RelativeLayout>

        <!--
             <View
            android:id="@+id/viewDivider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/custom_dialog_title_row"
            android:background="@color/native_dialog_divider_color" />
        -->

        <LinearLayout
            android:id="@+id/dialog_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/custom_dialog_title_row"
            android:layout_marginLeft="@dimen/media_details_long_click_custom_dialog_text_view_title_row_padding_left"
            android:layout_marginTop="10dp"
            android:orientation="vertical" >

            <com.hungama.myplay.activity.ui.widgets.LanguageTextView
                android:id="@+id/help_text_line1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:text="@string/songcatcher_help_text_line1"
                android:textColor="@color/gray"
                android:textSize="@dimen/normal_text_size" />

            <com.hungama.myplay.activity.ui.widgets.LanguageTextView
                android:id="@+id/help_text_line2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="left|center_vertical"
                android:layout_marginTop="10dp"
                android:text="@string/songcatcher_help_text_line2"
                android:textColor="@color/gray"
                android:textSize="@dimen/normal_text_size" />
        </LinearLayout>

        <!--
             <View
            android:id="@+id/viewDivider1"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/play_list_edit_text"
            android:background="@color/native_dialog_divider_color" />
        -->

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dlg_padding_around"
            android:layout_marginLeft="@dimen/trivia_bubble_content_padding_checkbox"
            android:layout_marginRight="@dimen/trivia_bubble_content_padding_checkbox"
            android:layout_marginTop="@dimen/trivia_bubble_content_padding_checkbox"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:paddingBottom="5dp" >

            <com.hungama.myplay.activity.ui.widgets.LanguageButton
                android:id="@+id/bCloseVideoAd"
                android:layout_width="@dimen/custom_dialog_btn_width"
                android:layout_height="@dimen/dlg_common_height"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/background_blue_dialog_btn"
                android:text="@string/custom_dialog_btn_ok"
                android:textColor="@android:color/white"
                android:textSize="@dimen/medium_text_size" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>