<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_custom_dialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/carmode_dialog_bg"
    android:clickable="true"
    android:visibility="gone" >

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_dialog"
        android:padding="5dp">

        <TextView
            android:id="@+id/tv_dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="@string/application_name"
            android:textColor="@color/carmode_main_text_color"
            android:textSize="@dimen/carmode_text_medium_size" />

        <TextView
            android:id="@+id/tv_msg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_dialog_title"
            android:layout_marginTop="10dp"
            android:padding="10dp"
            android:text="@string/application_name"
            android:textColor="@color/carmode_main_text_color"
            android:textSize="@dimen/carmode_text_small_size" />

        <LinearLayout
            android:id="@+id/ll_dialog_buttons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_msg"
            android:layout_centerHorizontal="true" >

            <Button
                android:id="@+id/btn_positive"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/carmode_button_states"
                android:text="@android:string/ok"
                android:textColor="@color/carmode_main_text_color"
                android:textSize="@dimen/carmode_text_small_size" />

            <Button
                android:id="@+id/btn_negative"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/carmode_button_states"
                android:text="@android:string/cancel"
                android:textColor="@color/carmode_main_text_color"
                android:textSize="@dimen/carmode_text_small_size" />
        </LinearLayout>
    </RelativeLayout>

</RelativeLayout>