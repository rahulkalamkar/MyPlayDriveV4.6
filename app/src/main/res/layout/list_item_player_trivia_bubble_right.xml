<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:orientation="vertical"
    android:paddingLeft="@dimen/trivia_bubble_padding_left_right"
    android:paddingRight="@dimen/trivia_bubble_padding_left_right" >

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/background_trivia_bubble_right_top" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_trivia_bubble_right_middle"
        android:orientation="vertical"
        android:padding="@dimen/trivia_bubble_content_padding_trivia" >

        <TextView
            android:id="@+id/player_trivia_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/trivia_bubble_content_padding_trivia"
            android:textColor="@color/black"
            android:textSize="@dimen/medium_text_size" />

        <ImageView
            android:id="@+id/player_trivia_button_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_trivia_share"
            android:textColor="@color/myPrimaryColor" />
        <!--
             <com.hungama.myplay.activity.ui.widgets.LanguageButton
            android:id="@+id/player_trivia_button_share"
            android:layout_width="@dimen/trivia_bubble_share_button_width"
            android:layout_height="30dp"
            android:layout_gravity="left"
            android:layout_marginRight="@dimen/player_content_margin_side"
            android:background="@drawable/background_button_blue"
            android:textColor="@color/white" />
        -->
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:src="@drawable/background_trivia_bubble_right_bottom"
        android:visibility="visible" />

</LinearLayout>