<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000" >

    <ImageView
        android:visibility="gone"
        android:layout_width="@dimen/upgrade_onboard_popup_width"
        android:layout_height="@dimen/upgrade_onboard_popup_height"
        android:layout_centerInParent="true"
        android:background="#00000000"
        android:scaleType="centerCrop"
         />
    <!--android:src="@drawable/on_board_inpage"-->
    <include android:id="@+id/iv_bg" layout="@layout/on_board_screen"></include>
    <ImageButton
        android:id="@+id/close_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/iv_bg"
        android:layout_alignTop="@id/iv_bg"
        android:layout_marginRight="@dimen/upgrade_subscription_popup_close_button_margin"
        android:layout_marginTop="@dimen/upgrade_subscription_popup_close_button_margin"
        android:background="#0000"
        android:src="@drawable/upgrade_popup_close_button"
        android:visibility="gone"/>
    <!-- </RelativeLayout> -->

    <Button
        android:id="@+id/button_getStared"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/iv_bg"
        android:layout_centerHorizontal="true" android:textColor="@color/white"
        android:layout_marginBottom="@dimen/upgrade_subscription_popup_upgrade_button_margin"
        android:background="@drawable/upgrade_popup_button_bg"
        android:padding="@dimen/upgrade_subscription_popup_upgrade_button_padding"
        android:text="@string/dialog_upgrade_on_board_get_stared"
        android:textStyle="bold" />

</RelativeLayout>